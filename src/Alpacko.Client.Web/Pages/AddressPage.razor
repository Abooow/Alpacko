@page "/address"
@using Alpacko.Client.Web.Models;

<h3>AddressPageNAVBAR</h3>
<div class="container-fluid">
    <ul class="nav nav-pills justify-content-center">
        <li class="nav-item ">
            <div class="nav-link">Product</div>
        </li>
        <li class="nav-item ">
            <div class="nav-link active">Address</div>
        </li>
        <li class="nav-item ">
            <div class="nav-link disabled">Payment</div>
        </li>
        <li class="nav-item ">
            <div class="nav-link disabled">Print</div>
        </li>
        <li class="nav-item ">
            <div class="nav-link disabled">Hand in</div>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <p id="indication">* indicates a required field</p>
    <div class="row">
        <div class="p-2 col">
            <EditForm Model="@senderModel">
                <DataAnnotationsValidator />
                <div id="form_group_left" class="form-group">
                    <h1 id="main_Sender">Sender</h1>
                    <p id="sender">Who is sending the package?</p>
                    <div class="d-inline-flex">
                        <div id="firstname_box " class="p-2">
                            <label for="firstname">First name *</label>
                            <InputText type="firstname" class="form-control" id="firstname" @bind-Value="@senderModel.FirstName" placeholder="First Name" />
                            <ValidationMessage For="@(() => senderModel.FirstName)" />
                        </div>
                        <div id="lastname_box" class="p-2">
                            <label for="lastname">Last name *</label>
                            <InputText type="lastname" class="form-control" id="lastname" @bind-Value="@senderModel.LastName" placeholder="Last Name" />
                            <ValidationMessage For="@(() => senderModel.LastName)" />
                        </div>
                    </div>
                    <div class="d-inline-flex p-2">
                        <div id="address_box">
                            <label for="address">Address *</label>
                            <InputText type="address" class="form-control" id="address" @bind-Value="@senderModel.Address" placeholder="Address" />
                            <ValidationMessage For="@(() => senderModel.Address)" />
                        </div>
                    </div>
                    <div class="d-inline-flex ">
                        <div id="zipcode_box " class="p-2">
                            <label for="zipcode">Zip Code *</label>
                            <InputText class="form-control" id="zipcode" @bind-Value="@senderModel.ZipCode" placeholder="Zip Code" />
                            <ValidationMessage For="@(() => senderModel.ZipCode)" />
                        </div>
                        <div id="city_box" class="p-2">
                            <label for="city">City *</label>
                            <InputText type="city" class="form-control" id="city" @bind-Value="@senderModel.City" placeholder="City" />
                            <ValidationMessage For="@(() => senderModel.City)" />
                        </div>
                    </div>
                    <div class="d-inline-flex p-2">
                        <div id="email_box">
                            <label for="email">Email *</label>
                            <InputText type="Email" class="form-control" id="Email" @bind-Value="@senderModel.Email" placeholder="Email" />
                            <ValidationMessage For="@(() => senderModel.Email)" />
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
        <div id="mid_main_box" class=" p-2 col">
            <EditForm Model="@receiverModel">
                <DataAnnotationsValidator />
                <div id="form_group_mid" class="form-group">
                    <h1 id="main_Receiver">Receiver</h1>
                    <p id="receiver">Where's the package going?</p>
                    <div class="d-inline-flex">
                        <div id="firstname_box " class="p-2">
                            <label for="firstname">First name *</label>
                            <InputText type="firstname" class="form-control" id="firstname" @bind-Value="@receiverModel.FirstName" placeholder="First Name" />
                            <ValidationMessage For="@(() => receiverModel.FirstName)" />
                        </div>
                        <div id="lastname_box" class="p-2">
                            <label for="lastname">Last name *</label>
                            <InputText type="lastname" class="form-control" id="lastname" @bind-Value="@receiverModel.LastName" placeholder="Last Name" />
                            <ValidationMessage For="@(() =>  receiverModel.LastName)" />
                        </div>
                    </div>
                    <div>
                        <div id="Co_box" class="p-2">
                            <label for="C/o">C/o</label>
                            <InputText type="C/o" class="form-control" id="C/o" @bind-Value="@receiverModel.Co" placeholder="C/o" />
                            <ValidationMessage For="@(() =>  receiverModel.Co)" />
                        </div>
                    </div>
                    <div>
                        <div id="address_box" class="p-2">
                            <label for="address">Address *</label>
                            <InputText type="address" class="form-control" id="address" @bind-Value="@receiverModel.Address" placeholder="Address" />
                            <ValidationMessage For="@(() =>  receiverModel.Address)" />
                        </div>
                    </div>
                    <div class="d-inline-flex ">
                        <div id="zipcode_box " class="p-2">
                            <label for="zipcode">Zip Code *</label>
                            <InputText class="form-control" id="zipcode" @bind-Value="@receiverModel.ZipCode" placeholder="Zip Code" />
                            <ValidationMessage For="@(() =>  receiverModel.ZipCode)" />
                        </div>
                        <div id="city_box" class="p-2">
                            <label for="city">City *</label>
                            <InputText type="city" class="form-control" id="city" @bind-Value="@receiverModel.City" placeholder="City" />
                            <ValidationMessage For="@(() =>  receiverModel.City)" />
                        </div>
                    </div>
                    <div>
                        <div id="country_box" class="p-2">
                            <label for="country">Country</label>
                            <InputText type="country" class="form-control" id="country" @bind-Value="@receiverModel.Country" placeholder="Country" />
                            <ValidationMessage For="@(() =>  receiverModel.Country)" />
                        </div>
                    </div>
                    <div>
                        <div id="email_box" class="p-2">
                            <label for="email">Email</label>
                            <InputText type="Email" class="form-control" id="Email" @bind-Value="@receiverModel.Email" placeholder="Email" />
                            <ValidationMessage For="@(() => receiverModel.Email)" />
                        </div>
                    </div>
                    <div>
                        <div id="phonenumber_box" class="p-2">
                            <label for="phonenumber">Phone number</label>
                            <InputText type="tel" class="form-control" id="PhoneNumber" @bind-Value="@receiverModel.PhoneNumber" placeholder="Phone Number" />
                            <ValidationMessage For="@(() =>  receiverModel.PhoneNumber)" />
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
        <div class="col">
            <div id="form_group_right">
                <div id="package_info_box">
                    <h3 id="package_info_header">Package Information</h3>
                </div>
                <div id="package_data" >
                    <p>Size:</p>
                    <p>Length:</p>
                    <p>Width:</p>
                    <p>Height:</p>
                    <p>Weight:</p>
                </div>
                <div class="p-2">
                    <p>Price incl. VAT</p>
                </div>
            </div>
            <div id="btn_box">
                <button id="nextBtn" class="rounded">NEXT</button>
            </div>
        </div>
    </div>
</div>

@code {
    private SenderModel senderModel = new SenderModel();
    private ReceiverModel receiverModel = new ReceiverModel();
}